<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
>

    <Space
        android:id="@+id/centerVertical"
        android:layout_height="match_parent"
        android:layout_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/restartEpdgWodLay"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/start_sel"
        android:padding="0dp"
        android:onClick="restartEpdgWod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/currentConnection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restartEpdgWodLay"
    />

    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frmSettings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentConnection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constrainedHeight="true" 
    />

    
     
</androidx.constraintlayout.widget.ConstraintLayout>
